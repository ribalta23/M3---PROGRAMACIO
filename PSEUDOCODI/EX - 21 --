PROGRAMA

    ENTORN

    ALGORITME

        FUNCIÓ
            
            ENTORN:
                
                N = NUMERICA SENCERA
                P = BOOLEANA
                C = NUMERICA SENCERA
                
            INICI
                Llegir(N)
                SI(N <= 1)
                    Escriure(El numero NO es primer)
                SINO
                    P = Verdader
                    PER C DE 2 FINS N-1
                        SI(N / C = MOD 0)
                            P = FALÇ
                        FI SI
                    FI PER
                    SI(P = Verdader)
                        Escriure(El numero es primer)
                    SINO
                        Escriure(El numero NO es primer)
                FI SI
            RETORNA
    
        FI FUNCIO

FI PROGRAMA




        