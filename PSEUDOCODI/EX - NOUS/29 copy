PROGRAMA

    ENTORN

    ALGORITME

        FUNCIÓ
            
            ENTORN:

                D = NÚMERICA REAL
                M = NÚMERICA REAL
                A = NÚMERICA REAL

            INICI
                
                D = 0
                M = 0
                A = 0

                Escriu(Un dia)
                Llegeix(D)
                SI (D > 0 i < 32)
                    Escriu(Un mes)
                    Llegeix(M)
                    SI (M > 0 i < 13)
                        SI (M = 2)
                            SI (D > 0 i < 20)
                                ValidadacióAny()
                            SI NO
                                Escriu(Dada no valida)
                            FI SI
                        SI NO (M = 4)
                    NO
                        Escriu(Dada no valida)
                    FI SI
                SI NO
                    Escriu(Dada no valida)
                FI SI
                FUNCIO (ValidadacióAny)
            RETORNA

        FI FUNCIO
            


FI PROGRAMA