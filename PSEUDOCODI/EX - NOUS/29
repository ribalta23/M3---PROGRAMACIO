PROGRAMA

    ENTORN

    ALGORITME

        FUNCIÓ
            
            ENTORN:

                N1 = NÚMERICA SENCERA
                N2 = NÚMERICA SENCERA
                B = NÚMERICA SENCERA
                C = NÚMERICA SENCERA

                S1 = NÚMERICA SENCERA
                S2 = NÚMERICA SENCERA

                T = NÚMERICA SENCERA 
                P = NÚMERICA SENCERA 
                
                M = NÚMERICA SENCERA

            INICI
                
                N1 = 0
                N2 = 0
                B = 0
                C = 1

                Escriu(Escriu el número de alumnes)
                Llegeix(B)

                PER C DE 1 FINS B
                    Escriu(Escriu la nota teorica)
                    Llegeix(N1)
                    Escriu(Escriu la nota pràctica)
                    Llegeix(N2)

                    S1 = S1 + N1
                    S2 = S2 + N2

                FI PER

                T = S1 / B
                

                P = S2 / B
                

                M = T * 0.6 + P * 0.4

                Escriu(La mitjana total es M)
                Escriu(La mitjana teÒrica es T)
                Escriu(La mitjana teÒrica es P)   

            RETORNA

        FI FUNCIO

FI PROGRAMA