        FUNCIÓ
            
            ENTORN:
                
                N = NÚMERICA SENCERA
                R = NÚMERICA SENCERA

            INICI
                
                Llegeix(N)
                R = N MOD 2

                SI(N > 0 I R = 0)
                    Escriu(El número es parell i positiu)
                SI NO (N = 0)
                    BREAK
                SI NO
                    Escriure(Torna a probar)
                FI SI
               
            RETORNA
    
