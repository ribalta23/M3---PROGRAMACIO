PROGRAMA

    ENTORN

    ALGORITME

        FUNCIÓ
            
            ENTORN:
                
                N = NÚMERICA SENCERA
                C = NÚMERICA SENCERA
                R = NÚMERICA SENCERA
            INICI
                
                C = 1
                R = 0
                PER C DE 1 FINS 10
                    Llegeix(N)
                    SI(R < N)
                        R = N
                    FI SI
                FI PER
                
                Escriu(R)

            RETORNA
    
        FI FUNCIO

FI PROGRAMA